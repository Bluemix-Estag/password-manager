<!-- views/newacc.ejs -->
<!DOCTYPE html>
<html>

<head>
    <title>Register new Accounts to save</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="style/style.css" type="text/css" />
</head>

<body>
    <div class="container">
        <%- include('partials/navbar')%>
        <form class="form-horizontal" method="post" action="/addAcc">
            <h1 class="form-horizontal-heading" style="text-align: center; margin-right: 110px;">Add your account</h1>
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="accountName" placeholder="Account">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="password" class="form-control" name="accountPassword" placeholder="Password">
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-lg-10">
                    <input class="btn btn-default btn-block" type="submit" value="Add Info">
                </div>
            </div>
        </form>
    </div>
<%- include('partials/footer')%>
</body>
</html>
