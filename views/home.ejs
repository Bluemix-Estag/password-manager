<!-- views/home.ejs -->
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="style/style.css" type="text/css" />
</head>

<body>
    <div class="container">
        <div class="message"></div>
        <%- include('partials/navbar')%>
            <form class="form-horizontal" method="post" action="/profile">
                <div class="form-group">
                    <h2 class="form-horizontal-heading" style="text-align: center;margin-right: 140px">Please Sign in</h2>
                    <p style="text-align: center; font-weight: bold; margin-right: 140px">Account Name:</p>
                    <br>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="login" placeholder="Account Name">
                    </div>
                </div>
                <div class="form-group">
                    <p style="text-align: center; font-weight: bold;margin-right: 140px">Master Password:</p>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" name="password" placeholder="Master Password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-lg-10">
                        <button class="btn btn-default btn-block" id="submit" type="submit">Sign in</button>
                    </div>
                </div>
            </form>
    </div>
    <%- include('partials/footer')%>
</body>
</html>
